{% extends '::vipabase.html.twig' %}
{% block title %}{{ 'title.article_files'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('vipa_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans},
        {'title': 'title.review_forms'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    {% include '::flashbag.html.twig' %}

    <h2>{{ ('show.review.forms.'~journalStepAlias(step.order))|trans }}</h2>
    <a href="{{ url('dp_workflow_review_form_new', {'stepId': step.id, 'journalId': selectedJournal().id}) }}" class="btn btn-success">
        {{ "c"|trans }}
    </a>

    <hr>
    {{ grid(grid) }}
{% endblock %}
