<div class="panel panel-default">
    <div class="panel-heading">
        <button class="btn btn-success btn-xs" onclick="VipaWorkflow.showStepDetail(this, {{ step.order }})">
            <i class="fa fa-info-circle" data-toggle="tooltip"  data-title="{{ 'show.step.detail'|trans }}"></i>
            {{ 'what.i.can.do.in.this.step'|trans }}
        </button>
        {% if permissionCheck().isGrantedForStep(step) and step.status == stepStatus('ACTIVE') %}
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ 'select.action'|trans }}
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu step-actions-menu">
                    <li>
                        <a onclick="VipaWorkflow.createSpecificDialog(this)"
                           data-action-type="{{ actionType('ASSIGN_SECTION_EDITOR') }}">
                            {{ 'assign.section.editor'|trans }}
                        </a>
                    </li>
                    <li>
                        <a onclick="VipaWorkflow.createAssignReviewerDialog(this)"
                           data-action-type="{{ actionType('ASSIGN_REVIEWER') }}">
                            {{ 'assign.reviewer'|trans }}
                        </a>
                    </li>
                    <li>
                        <a onclick="VipaWorkflow.createSpecificDialog(this)"
                           data-action-type="{{ actionType('ASSIGN_SPELLING_EDITOR') }}">
                            {{ 'assign.spelling.editor'|trans }}
                        </a>
                    </li>
                    <li role="separator" class="divider"></li>
                    <li>
                        <a onclick="VipaWorkflow.createAssignAuthorDialog(this)"
                           data-action-type="{{ actionType('ASK_AUTHOR_FOR_CORRECTION') }}">
                            {{ 'ask.author.for.correction'|trans }}
                        </a>
                    </li>
                    <li role="separator" class="divider"></li>
                    <li>
                        <a onclick="VipaWorkflow.createBasicDialog(this)"
                           data-action-type="{{ actionType('CREATE_ISSUE') }}">
                            {{ 'create.issue'|trans }}
                        </a>
                    </li>
                    {% if permissionCheck().isHaveEditorRole() %}
                        <li role="separator" class="divider"></li>
                        <li>
                            <a onclick="VipaWorkflow.acceptAndGotoArrangement(this)"
                               data-action-type="{{ actionType('ACCEPT_GOTO_ARRANGEMENT') }}">
                                {{ 'accept.and.goto.arrangement'|trans }}
                            </a>
                        </li>
                    {% endif %}
                    <li>
                        <a onclick="VipaWorkflow.declineSubmission(this)"
                           data-action-type="{{ actionType('DECLINE_SUBMISSION') }}">
                            {{ 'decline.submission'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        {% endif %}
        <br>
        <br>
    </div>
    <div class="panel-body" id="dialogs-box-2">
        {{ 'installing.dialogs'|trans }}...
    </div>
</div>

<script>
    var stepOrder = 2;
    VipaWorkflow.loadDialogs();
</script>