<div class="panel panel-default">
    <div class="panel-heading text-center">{{ 'permissions.table'|trans }}</div>
    <table class="table table-hover table-condensed">
        <thead class="text-center">
            <tr>
                <th>{{ 'user.or.group'|trans }}</th>
                <th>{{ 'wf.step.pre.control'|trans }}</th>
                <th>{{ 'wf.step.review'|trans }}</th>
                <th>{{ 'wf.step.arrangement'|trans }}</th>
                <th>{{ 'full.permission'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for permission in permissions %}
                <tr>
                    <th>{{ permission[0]  }}</th>
                    <th>{{ printYesNo(permission[1])  }}</th>
                    <th>{{ printYesNo(permission[2]) }}</th>
                    <th>{{ printYesNo(permission[3]) }}</th>
                    <th>{{ printYesNo(permission[4]) }}</th>
                    <th></th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<button class="btn btn-primary"
        onclick="OjsWorkflow.setupWorkflowGrantedUsers()">
    {{ 'add.article.editor'|trans }}
</button>

<script>
    $('abbr.ago').each(function () {
        $(this).livestamp($(this).attr('title'));
    });
</script>