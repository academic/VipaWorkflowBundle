<div class="row col-lg-12 text-center">
    <div class="col-lg-10">
        <div class="btn-group btn-breadcrumb">
            <a href="{{ path('vipa_workflow_flow_active', {
                'journalId': timeline.journal.id
            }) }}" class="btn btn-default" data-toggle="tooltip" title="{{ 'workflow.actives'|trans }}"><i class="glyphicon glyphicon-flag"></i></a>
            {% for step in timeline.steps %}
                <a onclick="VipaWorkflow.loadStep({{ step.order }})" class="btn btn-default" id="workflow-step-{{ step.order }}">
                    {{ ('wf.step.'~journalStepAlias(step.order))|trans }}
                </a>
            {% endfor %}
        </div><br>
        {% if timeline.workflow.status == workflowStatus('HISTORY') %}
            <span class="label label-warning">
                {{ 'finished.workflow'|trans }}
            </span>
        {% endif %}
    </div>
    <div class="col-lg-2">
        <div class="btn-group">
            <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ 'select.submission.details'|trans }}
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu step-actions-menu">
                {% if permissionCheck().isHaveEditorRole() %}
                    <li>
                        <a onclick="VipaWorkflow.showHistoryLog(this)"
                           data-toggle="tooltip"
                           title="{{ 'browse.workflow.history'|trans }}">
                            {{ 'workflow.history'|trans }}
                        </a>
                    </li>
                {% endif %}
                <li>
                    <a onclick="VipaWorkflow.showPermissionTable(this)"
                       data-toggle="tooltip"
                       title="{{ 'browse.permission.table'|trans }}">
                        {{ 'permission.table'|trans }}
                    </a>
                </li>
                <li>
                    <a onclick="VipaWorkflow.showSubmissionDetail(this)">
                        {{ 'submission.detail'|trans }}
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
