{% block _specific_form %}
    <h4 class="text-center">{{ (actionAlias~'.form.header')|trans }}</h4>
    <div class="well">
        {{ include('::flashbag.html.twig') }}
        {{ form(form) }}
        <button class="btn btn-success" onclick="OjsWorkflow.postSpecificDialog(this)">{{ (actionAlias~'.create.button')|trans }}</button>
    </div>
    <style>
        .select2-dropdown {
            z-index: 9001;
        }
    </style>
    <script>
        $('.select2entity').select2entity();
    </script>
{% endblock %}

